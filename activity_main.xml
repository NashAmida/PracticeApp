<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/pageBackgroundColor"
        android:orientation="vertical">

        <TextView
            android:id='@+id/title'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4sp"
            android:layout_marginStart="4dp"
            android:padding="4sp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingStart="1dp"
            android:text="@string/welcome_to_my_art_quiz"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/titleColor"
            android:background="@color/titleBackgroundColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/question1_CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:padding="4sp"
            android:text="@string/which_are_primary_colours"
            android:textColor="#2968ce"
            android:textSize="20sp"
            android:textStyle="normal" />

        <CheckBox
            android:id="@+id/question1checkBox_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:onClick="onSelectCheckBox"
            android:text="@string/red" />

        <CheckBox
            android:id="@+id/question1checkBox_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:layout_marginLeft="4dp"
            android:onClick="onSelectCheckBox"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/black" />

        <CheckBox
            android:id="@+id/question1checkBox_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:layout_marginLeft="4dp"
            android:onClick="onSelectCheckBox"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/blue" />

        <CheckBox
            android:id="@+id/question1checkBox_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:onClick="onSelectCheckBox"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/green" />

        <TextView
            android:id="@+id/question2_RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:padding="4sp"
            android:text="@string/which_of_the_following_is_a_tool_used_for_painting"
            android:textColor="#2968ce"
            android:textSize="20sp"
            android:textStyle="normal" />

        <RadioGroup
            android:id="@+id/RadioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/question2_fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:onClick="onSelectRadioButtonGroup1"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/fork" />

            <RadioButton
                android:id="@+id/question2_shoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onSelectRadioButtonGroup1"
                android:layout_marginBottom="4sp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/shoe" />

            <RadioButton
                android:id="@+id/question2_paintbrush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onSelectRadioButtonGroup1"
                android:layout_marginBottom="4sp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/paintbrush" />

        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/question3_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:padding="4sp"
            android:text="@string/what_is_the_fifth_color_of_the_rainbow"
            android:textColor="#2968ce"
            android:textSize="20sp"
            android:textStyle="normal" />


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/write_your_answer"
            android:inputType="text"
            android:labelFor="@+id/question3_EditTextAnswer"
            android:padding="4dp"
            android:textColor="#789"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/question4_ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:text="@string/which_type_of_balance_is_displayed_in_the_diagram_below"
            android:textColor="#2968ce"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/asymmetricalImage"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/assym4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/RadioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#098"
                android:orientation="horizontal" />

                <RadioButton
                    android:id="@+id/question4_symmetricalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:onClick="onSelectRadioButtonGroup2"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/symmetrical_balance" />

                <RadioButton
                    android:id="@+id/question4_asymmetricalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSelectRadioButtonGroup2"
                    android:layout_marginBottom="4sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/asymmetrical_balance" />

        </LinearLayout>

        <TextView
            android:id="@+id/score_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="@string/score"
            android:textColor="@color/scoreColor"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="normal" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/submit_answers"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:background="@color/submitButtonColor"
                android:textSize="20sp"
                android:onClick="submit"/>

            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/reset_quiz"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:background="@color/resetButtonColor"
                android:textSize="20sp"
                android:onClick="reset"/>

        </LinearLayout>

    </LinearLayout>

